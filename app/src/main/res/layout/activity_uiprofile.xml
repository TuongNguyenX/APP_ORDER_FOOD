<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UIProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="250dp">
                <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/profile_image_anhbia"
                            android:scaleType="centerCrop"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"/>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="150dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image_avatar"
                        android:layout_width="190dp"
                        android:layout_height="190dp"
                        android:layout_centerHorizontal="true"
                        android:elevation="1dp"
                        app:civ_border_color="@color/light"
                        app:civ_border_width="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:layout_marginTop="85dp"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/profile_tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="100dp"
                                android:gravity="center"
                                android:text="Name User"
                                android:textColor="@color/black"
                                android:textSize="25dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/profile_tv_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:text="My Status"
                                android:textColor="@color/black"
                                android:textSize="17dp" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal"
                                android:weightSum="4">

                                <LinearLayout
                                    android:layout_width="62dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:background="@drawable/cercleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/ic_add" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Add to Story"
                                        android:textColor="@color/black"
                                        android:textSize="15dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="62dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:background="@drawable/cercleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/ic_view" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="View As"
                                        android:textColor="@color/black"
                                        android:textSize="15dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="62dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/profile_edit_image"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:background="@drawable/cercleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/ic_name" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="Edit Profile"
                                        android:textColor="@color/black"
                                        android:textSize="15dp" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="62dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/more"
                                        android:layout_width="44dp"
                                        android:layout_height="44dp"
                                        android:background="@drawable/cercleshape"
                                        android:padding="10dp"
                                        android:src="@drawable/ic_profile_more" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="More"
                                        android:textColor="@color/black"
                                        android:textSize="15dp" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="25dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="26dp"
                                        android:layout_height="26dp"
                                        android:src="@drawable/ic_profile_school" />

                                    <TextView
                                        android:id="@+id/profile_tv_student"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:paddingLeft="20dp"
                                        android:text="Studied Mobile Programming at Cao Dang Thuc Hanh FPT Polytechnic HCM"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="26dp"
                                        android:layout_height="26dp"
                                        android:src="@drawable/ic_profile_city" />

                                    <TextView
                                        android:id="@+id/profile_tv_live"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:paddingLeft="20dp"
                                        android:text="Live in Ho Chi Minh, Viet Nam"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="26dp"
                                        android:layout_height="26dp"
                                        android:src="@drawable/ic_profile_location" />

                                    <TextView
                                        android:id="@+id/profile_tv_from"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:paddingLeft="20dp"
                                        android:text="From Thap Muoi"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="26dp"
                                        android:layout_height="26dp"
                                        android:src="@drawable/ic_profile_joined" />

                                    <TextView
                                        android:id="@+id/profile_tv_jonined"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:paddingLeft="20dp"
                                        android:text="Jonined Angust 2015"
                                        android:textColor="@color/black"
                                        android:textSize="15dp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:text="Edit Public Detail" />
                                <RelativeLayout
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_centerVertical="true"
                                        android:background="@color/view_md" />

                                    <View
                                        android:layout_width="60dp"
                                        android:layout_height="2dp"
                                        android:layout_centerVertical="true"
                                        android:background="#FF1718" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_marginTop="20dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.vipul.hp_hp.timelineview.TimelineView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            app:line="@color/colorBlue"
                                            app:line_size="1dp"
                                            app:marker="@drawable/ic_preson_blue"
                                            app:marker_size="25dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="20dp"
                                                android:text="About Me"
                                                android:textColor="@color/black"
                                                android:textSize="20dp" />

                                            <TextView

                                                android:id="@+id/tv_About_UI_Detail"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="20dp"
                                                android:paddingEnd="10dp"
                                                android:text="I am a very simple and a cute girl love to take selfie and wish to convert it in my profession, I really like to hangout with people."
                                                android:textColor="@color/black"
                                                android:textSize="16dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="240dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.vipul.hp_hp.timelineview.TimelineView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"

                                            app:line="@color/colorBlue"
                                            app:line_size="1dp"
                                            app:marker="@drawable/ic_library_blue"
                                            app:marker_size="25dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="20dp"
                                                android:text="Photos"
                                                android:textColor="@color/black"
                                                android:textSize="20dp" />

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:orientation="vertical"
                                                android:paddingLeft="20dp">
                                                <androidx.cardview.widget.CardView
                                                    android:layout_marginTop="10dp"
                                                    android:layout_width="170dp"
                                                    android:layout_height="150dp"
                                                    app:cardCornerRadius="6dp">
                                                    <LinearLayout
                                                        android:layout_width="match_parent"
                                                        android:orientation="vertical"
                                                        android:layout_height="wrap_content">
                                                                <RelativeLayout
                                                                    android:layout_width="match_parent"
                                                                    android:layout_height="wrap_content">
                                                                    <ImageView
                                                                        android:background="@drawable/nature"
                                                                        android:id="@+id/menu_image2"
                                                                        android:layout_width="match_parent"
                                                                        android:layout_height="wrap_content"
                                                                        android:scaleType="centerCrop" />
                                                                </RelativeLayout>
                                                    </LinearLayout>
                                                </androidx.cardview.widget.CardView>
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.vipul.hp_hp.timelineview.TimelineView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            app:line="@color/colorBlue"
                                            app:line_size="1dp"
                                            app:marker="@drawable/ic_profile_location"
                                            app:marker_size="25dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="20dp"
                                                android:text="Location"
                                                android:textColor="@color/black"
                                                android:textSize="20dp" />

                                            <TextView
                                                android:id="@+id/tv_Location_UI_Detail"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="20dp"
                                                android:paddingEnd="10dp"
                                                android:text="Lives in New York, From Paris· Also Lived in Canada."
                                                android:textColor="@color/black"
                                                android:textSize="16dp" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="100dp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <com.vipul.hp_hp.timelineview.TimelineView
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"

                                            app:line="@color/colorBlue"
                                            app:line_size="1dp"
                                            app:marker="@drawable/ic_library_blue"
                                            app:marker_size="25dp" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">

                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="20dp"
                                                android:text="Contact Me"
                                                android:textColor="@color/black"
                                                android:textSize="20dp" />

                                            <TextView
                                                android:id="@+id/tv_Email_UI_Detail"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="20dp"
                                                android:paddingEnd="10dp"
                                                android:text="Email:"
                                                android:textColor="@color/black"
                                                android:textSize="16dp" />
                                            <TextView
                                                android:id="@+id/tv_Phone_UI_Detail"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:paddingLeft="20dp"
                                                android:paddingEnd="10dp"
                                                android:text="Phone"
                                                android:textColor="@color/black"
                                                android:textSize="16dp" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>