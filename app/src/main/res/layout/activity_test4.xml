<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:elevation="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/cart_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Name Product"
                    android:textAllCaps="true"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <ImageView
                    android:id="@+id/cart_item_count"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/cart_item_name"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    />



            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/cart_item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|start"
                    android:text="$99,999"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    android:textStyle="italic"

                    />


                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_alignParentRight="true"
                    android:id="@+id/tv_price_category_other"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    app:finalNumber="20"
                    app:initialNumber="1"

                    android:layout_margin="10dp" />
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trà Sữa"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:text="4.5"
                    android:id="@+id/tv_star_category_other"
                    android:textColor="#1C223C"
                    android:textSize="15dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView

                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:id="@+id/btnShare"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/tag2" />
                <TextView
                    android:id="@+id/tv_sale"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1C223C"
                    android:text="Giảm 45% toàn menu..."
                    android:textSize="11dp" />
            </LinearLayout>



        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>