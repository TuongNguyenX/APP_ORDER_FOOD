<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/txt_Sale_Detail_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Name"
                android:textColor="#626262"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_money_24dp" />

            <TextView
                android:textStyle="bold"
                android:textSize="30dp"
                android:id="@+id/txt_Sale_Detail_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="10,000" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="#e3e3e4" />





            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/number_Sale_Detail"
                android:layout_width="90dp"
                android:layout_marginStart="10dp"
                android:layout_height="35dp"
                app:backGroundColor="#0B8B10"
                app:finalNumber="20"
                app:initialNumber="1"
                app:textSize="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Feedback:"
                android:textColor="@color/textView_md"
                android:textStyle="bold" />

            <LinearLayout

                android:background="@drawable/button_login_bg"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp">

                <com.github.ornolfr.ratingview.RatingView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:drawable_empty="@drawable/stare"
                    app:drawable_filled="@drawable/stare_y"
                    app:drawable_half="@drawable/stare_yh"
                    app:drawable_margin="1dp"
                    app:drawable_size="14dp"
                    app:is_indicator="true"
                    app:max_count="5" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="(4.5)"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Admin rate"
                android:textColor="@color/textView_md"
                android:textStyle="bold" />

            <com.github.ornolfr.ratingview.RatingView
                android:id="@+id/ratingBar_md"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                app:drawable_empty="@drawable/stare_gray"
                app:drawable_filled="@drawable/stare_g"
                app:drawable_half="@drawable/stare_gh"
                app:drawable_margin="1dp"
                app:drawable_size="14dp"
                app:is_indicator="true"
                app:max_count="5" />

            <TextView
                android:id="@+id/textView_rating_md"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/app_name"
                android:textColor="@color/textView_md" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_marginBottom="20dp"

                android:layout_marginTop="10dp"
                android:text="Add to Cart"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:id="@+id/button_buy_Sale_Detail"
                android:layout_height="wrap_content"
                android:background="@drawable/user_rating_bg">



            </Button>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>